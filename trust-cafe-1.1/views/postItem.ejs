<% include ./header %>
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/images/contact-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>Post Item</h1>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
</header>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script> <!-- or use local jquery -->
<script src="/javascripts/jqBootstrapValidation.js"></script>
<script>
$(function () { $("input,select,textarea").not("[type=submit]").jqBootstrapValidation(); } );
</script>
<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <h2>Post new Item</h2>
      <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
      <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
      <!-- NOTE: To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
      <form name="sentMessage" action="/item" method="POST" id="contactForm" novalidate>
        <!-- name -->
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Name</label>
            <input type="text" class="form-control" placeholder="Name" id="title" name="name" required data-validation-required-message="Please enter your name.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <!-- date -->
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Date</label>
            <h3>Date</h3>
            <script src="/javascripts/jquery-ui.js"></script>
            <input type="date" class="form-control" placeholder="yyyy-mm-dd" id="date" name="date" required data-validation-required-message="Please enter your event date.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <!-- value -->
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Value</label>
            <h3>Value</h3>
            <input type="number" class="form-control" placeholder="Value" id="value" name="value" min="1" required data-validation-required-message="Please enter value.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <!-- description -->
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Description</label>
            <h3>Description</h3>
            <input type="text" class="form-control" placeholder="Description" id="description" name="description"  required data-validation-required-message="Please enter your content.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <!-- CusOrg-->
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Sponser Name</label>
            <h3>Sponser Name</h3>

            <script>
            function CusOrg() {
              if (document.getElementById('Cus').checked) {
                document.getElementById('ifCus').style.display = 'block';
                document.getElementById('ifOrg').style.display = 'none';
                document.getElementById('organizationName').value = NULL;
              }
              else{
                document.getElementById('ifOrg').style.display = 'block';
                document.getElementById('ifCus').style.display = 'none';
                document.getElementById('customerName').value = NULL;
              }
            }
            </script>

            <input type="radio" onclick="CusOrg();" id="Cus" name="sponserTag" value="CUS">Customer
            <p id="ifCus" style="display:none">
              Customer Name: <input type='text' placeholder="Customer Name" id='customerName' name='customerName' required data-validation-required-message="Please enter Customer Name.">
            </p>
            <br>
            <input type="radio" onclick="CusOrg();" id="Org" name="sponserTag" value="ORG">Organization
            <p id="ifOrg" style="display:none">
              Organization Name: <input type='text' placeholder="Organization Name" id='organizationName' name='organizationName' required data-validation-required-message="Please enter Organization Name.">
            </p>
            <br>
          </div>
        </div>

        <!-- eventname -->
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Event Name</label>
            <h3>Event Name</h3>
            <input type="text" class="form-control" placeholder="EventName" id="eventName" name="eventName"  required data-validation-required-message="Please enter Event Name.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="row">
          <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-default">Send</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<hr>
<% include ./footer %>
